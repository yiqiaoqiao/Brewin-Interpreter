(class main
  (method is_odd (x)
    (if (== x 0)
      (return false)
      (return (call me is_even (- x 1)))
    )
  )
  (method is_even (x)
    (if (== x 0)
      (return true)
      (return (call me is_odd (- x 1)))
    )
  )
